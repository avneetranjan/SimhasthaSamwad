[Unit]
Description=Simhastha FastAPI (uvicorn)
After=network.target

[Service]
User=simhastha
Group=simhastha
WorkingDirectory=/var/www/SimhasthaProject/backend
EnvironmentFile=/var/www/SimhasthaProject/backend/.env
ExecStart=/var/www/SimhasthaProject/backend/.venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000 --workers 2
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

