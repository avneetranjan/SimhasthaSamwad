APP_NAME="Simhastha Samwad"
ENV=production
DEBUG=false

# Bind only to loopback; OpenLiteSpeed reverse-proxies to this
HOST=127.0.0.1
PORT=8000

# SQLite persistent path
SQLITE_PATH=/var/www/SimhasthaProject/data/simhastha.db

# CORS allowed origin (frontend)
FRONTEND_ORIGIN=https://<DOMAIN>

# External service (stub)
SAMWAD_BASE_URL=https://api.samwad.example.com
SAMWAD_API_KEY=changeme
SAMWAD_SEND_URL=https://www.app.samwad.tech/api/wpbox/sendmessage
SAMWAD_TOKEN=changeme
SAMWAD_LOCATION_URL=https://www.app.samwad.tech/api/wpbox/sendlocation
SAMWAD_LOCATION_REQUEST_URL=https://www.app.samwad.tech/api/wpbox/sendlocationrequest

# AI settings 
AI_BASE_URL=http://127.0.0.1:11434/v1
AI_MODEL=
AI_API_KEY=
AI_TEMPERATURE=0.4
AI_MAX_TOKENS=500
AI_KEEP_ALIVE=600m
AI_AUTOREPLY=false

# Comma-separated escalation numbers for emergencies
ESCALATION_NUMBERS=

# Auto-assignment defaults
ASSIGNEE_SANITATION=sanitation_team
ASSIGNEE_EMERGENCY=emergency_team
ASSIGNEE_INFO=info_team

# Reply ETA hints
SANITATION_ETA_MINUTES=12
MEDICAL_ETA_MINUTES=7

# Agent approvals
AGENT_AUTO_APPROVE_HIGHRISK=true
